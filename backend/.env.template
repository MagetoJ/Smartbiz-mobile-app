# Database Configuration
DATABASE_URL=postgresql+asyncpg://chef_user:chef_user@localhost/chef_db

# CORS Configuration
# Comma-separated list of allowed frontend origins
# Development: http://localhost:5173,http://localhost:3000
# Production: https://pos.statbricks.com,https://www.pos.statbricks.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Demo Data Seeding
# Set to "false" to disable automatic demo data seeding on first deploy
# Default: "true" (seeds demo data if database is empty)
SEED_DEMO_DATA=true

# Security - CHANGE IN PRODUCTION!
SECRET_KEY=your-secret-key-here-change-in-production-09876543210
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Application
APP_NAME=StatBricks
DEBUG=True

# Email Configuration (Postmark)
# Get Server API Token from: https://postmarkapp.com
# For testing: Set EMAIL_TEST_MODE=True to log emails instead of sending
POSTMARK_ENABLED=True
POSTMARK_SERVER_TOKEN=your-postmark-server-token
POSTMARK_FROM_EMAIL=noreply@statbricks.com
POSTMARK_FROM_NAME=StatBricks Team
EMAIL_TEST_MODE=False

# Frontend URL (for email links - login, password reset, etc.)
# Development: http://localhost:5173
# Production: https://your-domain.com
FRONTEND_URL=http://localhost:5173

# Cloudflare R2 Configuration
# Get these from Cloudflare R2 Dashboard > Bucket > Settings
R2_ENDPOINT_URL=https://<account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=statbricks-products
R2_PUBLIC_URL=https://your-bucket.r2.dev

# LiteLLM AI Configuration (for product classification)
# Get API key from: https://console.anthropic.com/ (or your chosen provider)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
AI_MODEL=anthropic/claude-haiku-4-5-20251001
AI_MAX_TOKENS=300
AI_CLASSIFICATION_ENABLED=True

# Optional: Add fallback models (comma-separated)
# AI_FALLBACK_MODELS=gpt-4o-mini,gemini/gemini-pro

# Optional: If using OpenAI as fallback, add:
# OPENAI_API_KEY=your-openai-api-key

# Optional: If using Google as fallback, add:
# GOOGLE_API_KEY=your-google-api-key

# Bootstrap Super Admin (Environment-Based - Cannot Be Deleted)
# This admin is automatically created/updated on server startup
# Email serves as username
# Password must be a pre-hashed bcrypt hash
# Generate hash: python -c "from passlib.context import CryptContext; print(CryptContext(schemes=['bcrypt']).hash('your_password'))"
BOOTSTRAP_SUPER_ADMIN_EMAIL=admin@example.com
BOOTSTRAP_SUPER_ADMIN_PASSWORD_HASH=$2b$12$...
BOOTSTRAP_SUPER_ADMIN_FULL_NAME=Platform Administrator

# Paystack Payment Configuration
# Get these from: https://dashboard.paystack.com/#/settings/developer
# Use test keys for development, live keys for production
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_WEBHOOK_SECRET=  # Optional: Get from webhook settings

# Subscription Settings
TRIAL_PERIOD_DAYS=14
GRACE_PERIOD_DAYS=3
